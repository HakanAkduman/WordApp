<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DictionaryFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etSearchBox"
        android:layout_width="290dp"
        android:layout_height="62dp"

        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="5"
        android:background="@drawable/shape_main"
        android:hint="Search a Word"
        android:paddingStart="20dp"

        />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="107dp"
        android:layout_height="67dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#5B72E3"
        android:text="Search"
        android:textColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etSearchBox"
        app:layout_constraintTop_toTopOf="parent"

        />

</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="10dp"
app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E8ECE6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@drawable/shape_search"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:text="Word"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="notsaved"
                    android:visibility="gone"
                    android:id="@+id/tvGhost"></TextView>

                <ImageButton
                    android:id="@+id/btnNote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@android:drawable/stat_notify_chat"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/img"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>

            <EditText
                android:id="@+id/etWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="hello"
                tools:ignore="TouchTargetSizeCheck"></EditText>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E8ECE6"
        tools:ignore="ExtraText">
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

android:gravity="center"
                    android:background="@drawable/shape_search"
                    android:layout_weight="12"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:text="Pronounce"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <ImageButton
                    android:id="@+id/btnSpeak"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>

            <EditText
                android:id="@+id/etPronunce"
                android:layout_width="match_parent"
                android:layout_height="46dp"

                android:background="@android:color/transparent"
                android:clickable="false"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="həˈləʊ"
                tools:ignore="TouchTargetSizeCheck"></EditText>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dictionaryRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPronunce">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>