<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:ignore="ExtraText,MissingConstraints"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#E8ECE6">
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_dictioanary">
            <TextView
                android:id="@+id/tvKind"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"




                android:text="noun"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25dp"
                ></TextView>
            <ImageButton
                android:id="@+id/btnSpeak"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A7CEF6"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



        </LinearLayout>


        <TextView
            android:id="@+id/tvKindExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="say or shout ‘hello’."
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvExampleConstant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:text="EXAMPLE:"
            android:textColor="@color/black"

            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/tvExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="say or shout ‘hello’."
            android:textSize="18dp"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>



</LinearLayout>